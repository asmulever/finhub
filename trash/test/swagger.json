{
  "openapi": "3.0.0",
  "info": {
    "title": "Finhub API",
    "version": "1.2.0",
    "description": "Endpoints protegidos con JWT para autenticacion, usuarios, cuentas y objetos financieros. Tokens de acceso duran 5 minutos y se renuevan con refresh tokens de 7 dias (cookies HttpOnly)."
  },
  "servers": [
    { "url": "http://localhost:8080", "description": "Entorno local" },
    { "url": "https://finhub.42web.io", "description": "Produccion" }
  ],
  "tags": [
    { "name": "Auth", "description": "Login, refresh y validacion de sesiones JWT" },
    { "name": "Health", "description": "Estado del servicio y base de datos" },
    { "name": "Users", "description": "CRUD de usuarios (solo rol admin)" },
    { "name": "Accounts", "description": "Cuentas de inversion ligadas a usuarios" },
    { "name": "Financial Objects", "description": "CRUD de objetos financieros" }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "email": { "type": "string", "format": "email" },
          "role": { "type": "string", "example": "admin" }
        }
      },
      "UserCreate": {
        "type": "object",
        "properties": {
          "email": { "type": "string", "format": "email" },
          "password": { "type": "string", "format": "password" },
          "role": { "type": "string", "default": "user" }
        },
        "required": ["email", "password"]
      },
      "FinancialObject": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "symbol": { "type": "string" },
          "type": { "type": "string", "example": "stock" }
        }
      },
      "FinancialObjectCreate": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "symbol": { "type": "string" },
          "type": { "type": "string" }
        },
        "required": ["name", "symbol", "type"]
      },
      "Account": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "user_id": { "type": "integer" },
          "user_email": { "type": "string", "format": "email" },
          "broker_name": { "type": "string" },
          "currency": { "type": "string", "example": "USD" },
          "is_primary": { "type": "boolean" },
          "created_at": { "type": "string", "format": "date-time" }
        }
      },
      "AccountCreate": {
        "type": "object",
        "properties": {
          "user_id": { "type": "integer" },
          "broker_name": { "type": "string" },
          "currency": { "type": "string", "default": "USD" },
          "is_primary": { "type": "boolean", "default": false }
        },
        "required": ["user_id", "broker_name", "currency"]
      },
      "AccountUpdate": {
        "type": "object",
        "properties": {
          "user_id": { "type": "integer" },
          "broker_name": { "type": "string" },
          "currency": { "type": "string" },
          "is_primary": { "type": "boolean" }
        },
        "description": "Si se omiten campos se usan los valores actuales de la cuenta."
      },
      "AuthLoginRequest": {
        "type": "object",
        "properties": {
          "email": { "type": "string", "format": "email" },
          "password": { "type": "string", "format": "password" }
        },
        "required": ["email", "password"]
      },
      "AuthPayload": {
        "type": "object",
        "properties": {
          "uid": { "type": "integer" },
          "email": { "type": "string", "format": "email" },
          "role": { "type": "string", "example": "admin" },
          "exp": { "type": "integer", "description": "UNIX epoch de expiracion del access token" }
        }
      },
      "AuthSuccess": {
        "type": "object",
        "properties": {
          "status": { "type": "string", "example": "authenticated" },
          "payload": { "$ref": "#/components/schemas/AuthPayload" },
          "access_expires_at": { "type": "integer", "format": "int64", "description": "UNIX epoch del access token (5 minutos)" },
          "refresh_expires_at": { "type": "integer", "format": "int64", "description": "UNIX epoch del refresh token (7 dias)" }
        }
      },
      "SessionResponse": {
        "type": "object",
        "properties": {
          "status": { "type": "string", "example": "valid_token" },
          "payload": { "$ref": "#/components/schemas/AuthPayload" },
          "access_expires_at": { "type": "integer", "format": "int64" }
        }
      },
      "AuthStatus": {
        "type": "object",
        "properties": {
          "status": { "type": "string", "example": "unauthenticated" }
        }
      },
      "UpdatedResponse": {
        "type": "object",
        "properties": {
          "status": { "type": "string", "example": "updated" }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": { "type": "string" }
        }
      }
    }
  },
  "paths": {
    "/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Inicia sesion con email y password",
        "description": "Genera access_token (5m) y refresh_token (7d) en cookies HttpOnly. Usa tambien /auth/validate para clientes legados.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/AuthLoginRequest" } }
          }
        },
        "responses": {
          "200": {
            "description": "Credenciales validas, cookies emitidas",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AuthSuccess" } } }
          },
          "401": {
            "description": "Credenciales invalidas",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AuthStatus" } } }
          },
          "400": {
            "description": "JSON invalido",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } }
          }
        }
      }
    },
    "/auth/validate": {
      "post": {
        "tags": ["Auth"],
        "summary": "Alias de login para clientes existentes",
        "description": "Mismo comportamiento que /auth/login: recibe email/password y emite cookies con los tokens.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/AuthLoginRequest" } }
          }
        },
        "responses": {
          "200": {
            "description": "Credenciales validas, cookies emitidas",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AuthSuccess" } } }
          },
          "401": {
            "description": "Credenciales invalidas",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AuthStatus" } } }
          },
          "400": {
            "description": "JSON invalido",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } }
          }
        }
      }
    },
    "/auth/refresh": {
      "post": {
        "tags": ["Auth"],
        "summary": "Renueva la sesion usando refresh_token de cookie",
        "responses": {
          "200": {
            "description": "Tokens renovados",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AuthSuccess" } } }
          },
          "401": {
            "description": "Refresh token ausente o invalido",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AuthStatus" } } }
          }
        }
      }
    },
    "/auth/session": {
      "get": {
        "tags": ["Auth"],
        "summary": "Valida un access_token (header Authorization o cookie)",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Token valido",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/SessionResponse" } } }
          },
          "401": {
            "description": "Token ausente o invalido",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AuthStatus" } } }
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "tags": ["Auth"],
        "summary": "Limpia las cookies de sesion",
        "responses": {
          "204": { "description": "Sesion cerrada" }
        }
      }
    },
    "/health": {
      "get": {
        "tags": ["Health"],
        "summary": "Revisa estado y conexion a la base",
        "responses": {
          "200": {
            "description": "Estado OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string", "example": "ok" },
                    "environment": { "type": "string", "example": "production" },
                    "database": { "type": "object", "description": "Conteos de tablas y estado de conexion" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users": {
      "get": {
        "tags": ["Users"],
        "summary": "Lista usuarios (requiere admin)",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Listado de usuarios",
            "content": {
              "application/json": {
                "schema": { "type": "array", "items": { "$ref": "#/components/schemas/User" } }
              }
            }
          },
          "401": { "description": "No autenticado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "403": { "description": "No autorizado (solo admin)", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      },
      "post": {
        "tags": ["Users"],
        "summary": "Crea un usuario (admin)",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/UserCreate" } }
          }
        },
        "responses": {
          "201": { "description": "Usuario creado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/User" } } } },
          "400": { "description": "Datos invalidos", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "401": { "description": "No autenticado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "403": { "description": "No autorizado (solo admin)", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      }
    },
    "/users/{id}": {
      "put": {
        "tags": ["Users"],
        "summary": "Actualiza un usuario (admin)",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/UserCreate" } }
          }
        },
        "responses": {
          "200": { "description": "Usuario actualizado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/UpdatedResponse" } } } },
          "400": { "description": "Datos invalidos", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "401": { "description": "No autenticado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "403": { "description": "No autorizado (solo admin)", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      },
      "delete": {
        "tags": ["Users"],
        "summary": "Elimina un usuario (admin)",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "204": { "description": "Usuario eliminado" },
          "400": { "description": "No se pudo eliminar", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "401": { "description": "No autenticado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "403": { "description": "No autorizado (solo admin)", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      }
    },
    "/financial-objects": {
      "get": {
        "tags": ["Financial Objects"],
        "summary": "Lista objetos financieros (requiere token)",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Listado de objetos",
            "content": {
              "application/json": {
                "schema": { "type": "array", "items": { "$ref": "#/components/schemas/FinancialObject" } }
              }
            }
          },
          "401": { "description": "No autenticado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      },
      "post": {
        "tags": ["Financial Objects"],
        "summary": "Crea objeto financiero (admin)",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/FinancialObjectCreate" } }
          }
        },
        "responses": {
          "201": { "description": "Objeto creado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/FinancialObject" } } } },
          "400": { "description": "Datos invalidos", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "401": { "description": "No autenticado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "403": { "description": "No autorizado (solo admin)", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      }
    },
    "/financial-objects/{id}": {
      "put": {
        "tags": ["Financial Objects"],
        "summary": "Actualiza objeto financiero (admin)",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/FinancialObjectCreate" } }
          }
        },
        "responses": {
          "200": { "description": "Objeto actualizado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/UpdatedResponse" } } } },
          "400": { "description": "Datos invalidos", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "401": { "description": "No autenticado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "403": { "description": "No autorizado (solo admin)", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      },
      "delete": {
        "tags": ["Financial Objects"],
        "summary": "Elimina objeto financiero (admin)",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "204": { "description": "Objeto eliminado" },
          "400": { "description": "No se pudo eliminar", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "401": { "description": "No autenticado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "403": { "description": "No autorizado (solo admin)", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      }
    },
    "/accounts": {
      "get": {
        "tags": ["Accounts"],
        "summary": "Lista cuentas (admin ve todas, usuario ve solo las suyas)",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Listado de cuentas",
            "content": {
              "application/json": {
                "schema": { "type": "array", "items": { "$ref": "#/components/schemas/Account" } }
              }
            }
          },
          "401": { "description": "No autenticado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      },
      "post": {
        "tags": ["Accounts"],
        "summary": "Crea una cuenta (admin)",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/AccountCreate" } }
          }
        },
        "responses": {
          "201": { "description": "Cuenta creada", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Account" } } } },
          "422": { "description": "Datos invalidos", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "401": { "description": "No autenticado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "403": { "description": "No autorizado (solo admin)", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      }
    },
    "/accounts/{id}": {
      "put": {
        "tags": ["Accounts"],
        "summary": "Actualiza una cuenta (admin)",
        "description": "Tambien acepta POST a /accounts/{id}/update para clientes legados.",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/AccountUpdate" } }
          }
        },
        "responses": {
          "200": { "description": "Cuenta actualizada", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Account" } } } },
          "422": { "description": "Datos invalidos o cuenta inexistente", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "401": { "description": "No autenticado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "403": { "description": "No autorizado (solo admin)", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      },
      "delete": {
        "tags": ["Accounts"],
        "summary": "Elimina una cuenta (admin)",
        "description": "Tambien acepta POST a /accounts/{id}/delete o /remove para clientes legados.",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "204": { "description": "Cuenta eliminada" },
          "404": { "description": "Cuenta no encontrada", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "401": { "description": "No autenticado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "403": { "description": "No autorizado (solo admin)", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      }
    }
  }
}
