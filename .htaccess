DirectoryIndex index.php
# Asegura que el header Authorization llegue a PHP (algunos hosts lo filtran).
SetEnvIf Authorization "(.*)" HTTP_AUTHORIZATION=$1

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # 1. API: todo lo que empiece con /api -> /api/index.php
    RewriteRule ^api$ BkEndApi/index.php [QSA,L]
    RewriteRule ^api/(.*)$ BkEndApi/index.php [QSA,L]

    # 2. Dejar pasar archivos o directorios reales
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # 3. Preflight CORS: AWS/Ajax/etc. -> UI controller
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^ index.php [QSA,L]

    # 4. UI: cualquier otra ruta a index.php
    RewriteRule ^ index.php [QSA,L]
</IfModule>

# --------------------------------------------------------------------
# NO AGREGAR CSP NI SECURITY HEADERS AQUÍ
# InfinityFree ya inyecta sus propios headers
# y si agregás otros, Chrome rompe assets y scripts.
# --------------------------------------------------------------------

<IfModule mod_headers.c>
    # Evitar cache de vistas HTML en desarrollo
    <FilesMatch "\.html$">
        Header set Cache-Control "no-store, no-cache, must-revalidate, max-age=0"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
</IfModule>
